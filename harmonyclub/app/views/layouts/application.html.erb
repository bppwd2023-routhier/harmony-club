<!DOCTYPE html>
<html>
  <head>
    <title>Harmonyclub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body class="background">
    <nav class="navbar red text-uppercase navbar-shrink">
        <div class="container me-auto my-2">
            <%= link_to "Harmony Club of Worcester", home_path, class: "navbar-brand text-uppercase h1 fw-bold fs-2" %>
            <button class="navbar-toggle text-uppercase font-weight-bold menuButton text-white rounded" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                <span>Menu</span><span class="navbar-dark navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>
    <div class="collapse" id="navbarToggleExternalContent">
        <div class="red p-4">

            <% if current_user %>
            <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
            <% else %>
            <%= link_to "Sign In", users_path, class: "nav-link" %>
            <% end %>
            <% if current_user %>
            <%= link_to "Control Panel", panel_path, class:"nav-link" %>
            <% end %>
            

            <% @sections.each do |n| %>
                <%= link_to n.title, n.location, class:"nav-link" %>
            <% end %>

        </div>
    </div>
    <div class="container">
        <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
        <% end %>
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="pageContent">
                <%= yield %>
            </div>
            <div class="col-lg-2"></div>
        </div>
    </div>



    <div class="red text-light">
        <div class=container-fluid">
            <div class="text-center border-bottom border-light p-1">
                <a class="text-light text-decoration-none" href="/">Harmony Club of Worcester | 2023</a>
            </div>
            <div class="row m-0 justify-content-center pt-1">
                <% @sections.each do |n| %>
                    <div class="col-4 mb-3 text-center">
                        <%= link_to n.title, n.location, class:"nav-link fw-bold fs-5" %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
    </body>
</html>
